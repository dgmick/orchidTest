{% extends 'base.html.twig' %}


{% block body %}
    <div class="robust-content content container-fluid">
        <div class="content-wrapper">
            <section id="basic">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Personnel</h4>
                        <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                                <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body collapse in">
                        <div class="card-block card-dashboard ">
                            <form action="{{ path('test-formulaire') }}" method="post">
                            {{ form_start(historique) }}
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Temps</th>
                                    <th>Poste</th>
                                    <th>Ville</th>
                                    <th>Edit</th>
                                </tr>
                                <tr>
                                    <th>{{ form_widget(historique.Employer) }}</th>
                                    <th>{{ form_widget(historique.Temps) }}</th>
                                    <th>{{ form_widget(historique.Poste) }}</th>
                                    <th>{{ form_widget(historique.City) }}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                            </table>
                            {{ form_widget(historique.envoyer) }}
                            {{ form_end(historique) }}
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>




{% endblock %}