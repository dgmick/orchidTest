                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Dropdown Buttons with Arrow end -->

                <!-- Stat Graphique start -->
                <div class="row">
                    <div class="col-lg-6">
                        <section id="flot-pie-charts">

                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Stat Graphique</h4>
                                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                                            <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body collapse in">
                                    <div class="card-block">
                                    </div>
                                    <div id="div_PieChart"></div>
                                    <div id="div_ColumnChart"></div>

                                    <script type="text/javascript"
                                            src="https://www.gstatic.com/charts/loader.js"></script>
                                    <script type="text/javascript">
                                        {{ gc_draw([piechart, col], ['div_PieChart', 'div_ColumnChart']) }}
                                    </script>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- end Stat Graphique--->

                    <!-- news orders start -->
                    <div class="col-lg-5">
                        <div class="card">
                            <div class="card-body">
