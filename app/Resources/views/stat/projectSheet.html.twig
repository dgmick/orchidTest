                                        <thead>
                                        <tr>
                                            <th>Country</th>
                                            <th>% Session</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for spendtime in spendList %}
                                            <tr>
                                                <td>
                                                    <i class="flag-icon flag-icon-{{ spendtime.logo }}"></i> {{ spendtime.contries }}
                                                </td>
                                                <td class="text-xs-center font-small-2">{{ spendtime.time }}%
                                                    <progress class="progress progress-sm progress-success mb-0"
                                                              value="{{ spendtime.time }}"
                                                              max="100"></progress>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
