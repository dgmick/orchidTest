                        </div>
                        <a href="calendars-clndr.html" class="btn btn-outline-primary"><i
                                    class="icon-calendar5"></i></a><a href="timeline-center.html"
                                                                      class="btn btn-outline-primary"><i
                                    class="icon-bar-graph-2"></i></a>
                    </div>
                </div>

            </div>
            <br><br>

            <!-- Dropdown Buttons with Arrow start -->
            <div class="content-body">
                <section id="dropdown-buttons-with-arrow">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="card">
                                <div class="card-block">
                                    <div class="card-body">
